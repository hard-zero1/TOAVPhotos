<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnCapturePhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:elevation="2dp"
        android:onClick="onTakePhoto"
        android:scaleType="fitCenter"
        android:text="@string/button_capture_photo"
        android:textColor="@color/colorShutterButtonText"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <SeekBar
        android:id="@+id/sbBrightness"
        style="@android:style/Widget.DeviceDefault.SeekBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:rotation="270"
        android:alpha="0.6"
        app:layout_constraintTop_toBottomOf="@+id/btnCapturePhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCapturePhoto" />

    <SeekBar
        android:id="@+id/sbZoom"
        style="@android:style/Widget.DeviceDefault.SeekBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:rotation="90"
        android:alpha="0.6"
        app:layout_constraintTop_toBottomOf="@+id/btnCapturePhoto"
        app:layout_constraintStart_toEndOf="@+id/btnCapturePhoto"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>